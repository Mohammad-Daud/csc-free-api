<!DOCTYPE html>
<html>

<head>
    <%- include('partials/meta'); -%>
    <title>

        <%= process.env.APP_NAME %> -
        <%= title %>

    </title>
    <%- include('partials/include_styles'); -%>
</head>

<body>

    <%- include('partials/nav'); -%>

    <div class="container">



        <div class="row">
            <div class="col-lg-12">
                <h2>Countries <small>Dynamic Reports</small></h2>



                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">filters</h3>
                    </div>
                    <div class="panel-body">

                        <form action="" method="get">

                            <div class="row">
                                <div class="col-lg-12">
                                    <p>Include/Exclude</p>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="sort_name" value="true"
                                            <% if (queryString.sort_name) { %> checked <% } %>
                                            >
                                            Short Name
                                        </label>
                                        <label>
                                            <input type="checkbox" name="name" value="true"
                                            <% if (queryString.name) { %> checked <% } %>
                                            >
                                            Name
                                        </label>
                                        <label>
                                            <input type="checkbox" name="phone_code" value="true"
                                            <% if (queryString.phone_code) { %> checked <% } %>
                                            >
                                            Phone Code
                                        </label>
                                    </div>
                                </div>
                            </div>

                            
                            <div class="row">
                                <div class="col-lg-3">
                                    <label for="">Country Name</label>
                                    <select name="cname_filter_type" class="form-control">
                                        <option value="Select">Select</option>
                                        <option <% if (queryString.cname_filter_type === 'like') { %> selected <% } %> value="like">Like</option>
                                        <option <% if (queryString.cname_filter_type === 'equal') { %> selected <% } %> value="equal">Equal</option>
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <label for="">&nbsp;</label>
                                    <input value="<%- queryString.name_like %>" type="text" name="name_like" class="form-control">
                                </div>
                            </div>
                            
                            <div class="row" style="margin-top:15px;">

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                                    <button type="submit" class="btn btn-default">Filter</button>

                                </div>

                            </div>



                        </form>



                    </div>
                </div>



                <div class="table-responsive">
                    <table class="table table-bordered table-condenced">
                        <thead>
                            <tr>
                                <% if (queryString.sort_name) { %>
                                <th>SORT NAME</th>
                                <% } %>
                                <% if (queryString.name) { %>
                                <th>NAME</th>
                                <% } %>
                                <% if (queryString.phone_code) { %>
                                <th>PHONE CODE</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% countries.forEach(function(country){ %>
                            <tr>
                                <% if (queryString.sort_name) { %>
                                <td>
                                    <%- country.sortname %>
                                </td>
                                <% } %>
                                <% if (queryString.name) { %>
                                <td>
                                    <%- country.name %>
                                </td>
                                <% } %>
                                <% if (queryString.phone_code) { %>
                                <td>
                                    <%- country.phonecode %>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>


            </div>
        </div>


    </div>









    <%- include('partials/include_js'); -%>


</body>

</html>