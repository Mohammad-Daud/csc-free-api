<!DOCTYPE html>
<html>

<head>
    <%- include('partials/meta'); -%>
    <title>

        <%= process.env.APP_NAME %> -
        <%= title %>

    </title>
    <%- include('partials/include_styles'); -%>
</head>

<body>

    <%- include('partials/nav'); -%>

    <div class="container">



        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">

                

                <p class="lead">
                    Access token will be sent to your registered email.
                </p>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register Here</h3>
                    </div>
                    <div class="panel-body">

                        
                        
                       
                        
                        

                        <% if (flash) { %>
                            
                            <div class="alert <%- alertClass %>">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <%- flash %>
                            </div>
                            
                        <% } %>
                        <form action="/register" method="POST" role="form">
                        
                            <div class="form-group">
                                <label for="">Name</label>
                                
                                <input type="text" class="form-control" name="name" placeholder="Name"  value="<%= oldFormData && typeof oldFormData.name !== 'undefined' ? oldFormData.name : '' %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="">Email</label>
                                <input type="text" class="form-control" name="email" placeholder="Email" value="<%= oldFormData && typeof oldFormData.email !== 'undefined' ? oldFormData.email : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="">Password</label>
                                <input type="password" class="form-control" name="password" placeholder="password" value="">
                            </div>
                        
                            
                        
                            <button type="submit" class="btn btn-primary">
                                Register
                            </button>
                            <a class="btn btn-default" href="/login">Login</a>
                        </form>
                        
                    </div>
                </div>

            </div>
        </div>


    </div>









    <%- include('partials/include_js'); -%>


</body>

</html>